<p id="notice"><%= notice %></p>

<h1>Spelling Tests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Practice</th>
      <th>Teacher</th>
      <th>Week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spelling_tests.each do |spelling_test| %>
      <tr>
        <td><%= spelling_test.name %></td>
        <td><%= spelling_test.practice %></td>
        <td><%= spelling_test.teacher %></td>
        <td><%= spelling_test.week %></td>
        <td><%= link_to 'Show', spelling_test %></td>
        <td><%= link_to 'Edit', edit_spelling_test_path(spelling_test) %></td>
        <td><%= link_to 'Destroy', spelling_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

