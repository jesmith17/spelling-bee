<!DOCTYPE html>
<html>
  <head>
    <title>SpellingBee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">
          <%= image_tag('pre_paw.png', height: '60px') %>
        </a>
        <ul id="nav-mobile" class="right hide-on-med-and-down valign-wrapper">
          <li class="active"><%= link_to 'Teachers', teachers_url %></li>
          <li><%= link_to 'Spelling Lists', spelling_lists_url %></li>
          <li><%= link_to 'Take Test', new_spelling_test_url %></li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
